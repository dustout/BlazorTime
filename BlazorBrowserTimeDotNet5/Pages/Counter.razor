@page "/counter"

<h1>Counter 2</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me abv</button>

<div>
  <p>Above</p>
  <ToLocal DateTime="currentTime"></ToLocal>

  <p>Below</p>
</div>

@code {
  private int currentCount = 0;
  private DateTime currentTime = DateTime.UtcNow;
  private void IncrementCount()
  {
    currentCount++;
  }
}
